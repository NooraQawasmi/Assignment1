<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="visible"
    tools:context=".MainActivity"
    android:background="@drawable/ic_launcher_foreground"
    tools:visibility="visible">


    <TextView
        style="@style/mystyle1"
        android:layout_width="445dp"
        android:layout_height="67dp"
        android:text="~ Welcome Everyone on my application!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        style="@style/mystyle1"
        android:layout_width="wrap_content"
        android:layout_height="57dp"
        android:text="~ Please enter your personal information below "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/editname"
        style="@style/mystyle1"
        android:layout_width="661dp"
        android:layout_height="80dp"
        android:ems="10"
        android:hint="name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editpassword"
        style="@style/mystyle1"
        android:layout_width="661dp"
        android:layout_height="80dp"
        android:ems="10"
        android:hint="password"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose your gender:" />

    <Spinner
        android:id="@+id/spinner1"
        style="@style/mystyle1"
        android:layout_width="445dp"
        android:layout_height="67dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        style="@style/mystyle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do you think this app is useful?"
        android:id="@+id/text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Switch
        style="@style/mystyle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/switch1">

    </Switch>

    <CheckBox
        style="@style/mystyle1"
        android:id="@+id/chk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="remember me"
        tools:layout_editor_absoluteX="145dp"
        tools:layout_editor_absoluteY="325dp" />

    <Button
        android:id="@+id/next"
        style="@style/mystyle1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next to work page"
        app:backgroundTint="#50C3B8"
        app:iconTint="#0C0912" />

    <Button
        android:id="@+id/go"
        style="@style/mystyle1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:backgroundTint="#50C3B8"
        app:iconTint="#0C0912"
        android:text="Next to Edu page" />


</LinearLayout>